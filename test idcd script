-- Toggle & Slider Function (singkat & clean)
local function toggle(name, callback)
    local f = Instance.new("Frame", scroll)
    f.Size = UDim2.new(1,0,0,44)
    f.BackgroundColor3 = Color3.fromRGB(28,28,50)
    Instance.new("UICorner", f).CornerRadius = UDim.new(0,10)
    
    local txt = Instance.new("TextLabel", f)
    txt.Size = UDim2.new(0.65,0,1,0)
    txt.Position = UDim2.new(0,12,0,0)
    txt.BackgroundTransparency = 1
    txt.Text = name
    txt.TextColor3 = Color3.new(1,1,1)
    txt.TextXAlignment = Enum.TextXAlignment.Left
    txt.Font = Enum.Font.GothamSemibold
    txt.TextSize = 16

    local btn = Instance.new("TextButton", f)
    btn.Size = UDim2.new(0,55,0,28)
    btn.Position = UDim2.new(1,-68,0.5,-14)
    btn.Text = "OFF"
    btn.BackgroundColor3 = Color3.fromRGB(90,0,0)
    Instance.new("UICorner", btn)
    local state = false
    btn.MouseButton1Click:Connect(function()
        state = not state
        btn.Text = state and "ON" or "OFF"
        btn.BackgroundColor3 = state and Color3.fromRGB(0,160,0) or Color3.fromRGB(90,0,0)
        callback(state)
    end)
end

local function slider(name, min, max, default, callback)
    local f = Instance.new("Frame", scroll)
    f.Size = UDim2.new(1,0,0,60)
    f.BackgroundColor3 = Color3.fromRGB(28,28,50)
    Instance.new("UICorner", f).CornerRadius = UDim.new(0,10)
    
    local label = Instance.new("TextLabel", f)
    label.Size = UDim2.new(1,0,0,28)
    label.Text = name .. ": " .. default
    label.BackgroundTransparency = 1
    label.TextColor3 = Color3.new(1,1,1)
    label.Font = Enum.Font.GothamSemibold
    label.TextSize = 15

    local bar = Instance.new("Frame", f)
    bar.Size = UDim2.new(0.9,0,0,8)
    bar.Position = UDim2.new(0.05,0,0.6,0)
    bar.BackgroundColor3 = Color3.fromRGB(50,50,70)
    Instance.new("UICorner", bar)
    
    local fill = Instance.new("Frame", bar)
    fill.Size = UDim2.new((default-min)/(max-min),0,1,0)
    fill.BackgroundColor3 = Color3.fromRGB(0,190,255)
    Instance.new("UICorner", fill)
    
    local dragging = false
    bar.InputBegan:Connect(function(i) if i.UserInputType == Enum.UserInputType.MouseButton1 then dragging = true end end)
    bar.InputEnded:Connect(function(i) if i.UserInputType == Enum.UserInputType.MouseButton1 then dragging = false end end)
    UserInputService.InputChanged:Connect(function(i)
        if dragging and i.UserInputType == Enum.UserInputType.MouseMovement then
            local p = math.clamp((i.Position.X - bar.AbsolutePosition.X) / bar.AbsoluteSize.X, 0, 1)
            local v = math.floor(min + (max-min)*p)
            fill.Size = UDim2.new(p,0,1,0)
            label.Text = name .. ": " .. v
            callback(v)
        end
    end)
end

-- Features
local autofarm = false
local fly = false
local noclip = false
local walkspeed = 16
local jumppower = 50
local delayTime = 8
local flySpeed = 70

toggle("Auto Farm", function(s) autofarm = s if s then startAutoFarm() end end)
toggle("Fly (Space)", function(s) fly = s end)
toggle("Noclip (N)", function(s) noclip = s end)
slider("WalkSpeed", 16, 200, 50, function(v) walkspeed = v humanoid.WalkSpeed = v end)
slider("JumpPower", 50, 300, 100, function(v) jumppower = v humanoid.JumpPower = v end)
slider("Farm Delay", 5, 20, 8, function(v) delayTime = v end)
slider("Fly Speed", 30, 150, 70, function(v) flySpeed = v end)

