-- BILLZZ PREMIUM HUB V6 - OWNER TAG SEDANG & ELEGANT
-- Key: premiumbillzz

local VirtualInputManager = game:GetService("VirtualInputManager")
local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")
local player = Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoid = character:WaitForChild("Humanoid")
local root = character:WaitForChild("HumanoidRootPart")
local mouse = player:GetMouse()

-- === REDEEM SYSTEM ===
local Redeemed = false
local CorrectKey = "premiumbillzz"

if not Redeemed then
    local rg = Instance.new("ScreenGui", game.CoreGui)
    local rf = Instance.new("Frame", rg)
    rf.Size = UDim2.new(0, 340, 0, 180)
    rf.Position = UDim2.new(0.5, -170, 0.5, -90)
    rf.BackgroundColor3 = Color3.fromRGB(12,12,20)
    rf.BorderSizePixel = 0
    Instance.new("UICorner", rf).CornerRadius = UDim.new(0,16)
    local st = Instance.new("UIStroke", rf)
    st.Color = Color3.fromRGB(0,180,255)
    st.Thickness = 2.5

    local title = Instance.new("TextLabel", rf)
    title.Size = UDim2.new(1,0,0,40)
    title.Text = "BILLZZ PREMIUM"
    title.TextColor3 = Color3.fromRGB(0,220,255)
    title.BackgroundTransparency = 1
    title.Font = Enum.Font.GothamBlack
    title.TextSize = 24

    local box = Instance.new("TextBox", rf)
    box.Size = UDim2.new(0.8,0,0,40)
    box.Position = UDim2.new(0.1,0,0.3,0)
    box.PlaceholderText = "Enter key..."
    box.BackgroundColor3 = Color3.fromRGB(25,25,45)
    box.TextColor3 = Color3.new(1,1,1)
    Instance.new("UICorner", box).CornerRadius = UDim.new(0,10)

    local btn = Instance.new("TextButton", rf)
    btn.Size = UDim2.new(0.8,0,0,40)
    btn.Position = UDim2.new(0.1,0,0.65,0)
    btn.Text = "REDEEM"
    btn.BackgroundColor3 = Color3.fromRGB(0,160,255)
    btn.TextColor3 = Color3.new(1,1,1)
    btn.Font = Enum.Font.GothamBold
    Instance.new("UICorner", btn).CornerRadius = UDim.new(0,10)

    btn.MouseButton1Click:Connect(function()
        if box.Text:lower() == CorrectKey then
            Redeemed = true
            rg:Destroy()
        else
            box.Text = ""
            box.PlaceholderText = "Wrong key!"
            task.wait(1.5)
            box.PlaceholderText = "Enter key..."
        end
    end)
    repeat task.wait() until Redeemed
end

-- === HIDE NAME + BILLZZ OWNER TAG SEDANG (ELEGANT) ===
local function setupOwnerTag()
    if character:FindFirstChild("Head") then
        for _, v in pairs(character.Head:GetChildren()) do
            if v:IsA("BillboardGui") then v:Destroy() end
        end

        local bill = Instance.new("BillboardGui", character.Head)
        bill.Adornee = character.Head
        bill.Size = UDim2.new(0, 180, 0, 50)
        bill.StudsOffset = Vector3.new(0, 3, 0)
        bill.AlwaysOnTop = true

        local text = Instance.new("TextLabel", bill)
        text.Size = UDim2.new(1,0,1,0)
        text.BackgroundTransparency = 1
        text.Text = "BILLZZ OWNER"
        text.TextColor3 = Color3.fromRGB(255, 223, 0)  -- Kuning emas elegan
        text.Font = Enum.Font.GothamBold
        text.TextStrokeTransparency = 0.7
        text.TextStrokeColor3 = Color3.new(0,0,0)
        text.TextSize = 28  -- Ukuran sedang, pas, ga gede banget

        -- Glow halus
        local glow = Instance.new("UIStroke", text)
        glow.Color = Color3.fromRGB(255, 255, 150)
        glow.Thickness = 2.5
        glow.Transparency = 0.4
    end
end

setupOwnerTag()
player.CharacterAdded:Connect(function(char)
    character = char
    humanoid = char:WaitForChild("Humanoid")
    root = char:WaitForChild("HumanoidRootPart")
    task.wait(1)
    setupOwnerTag()
end)

