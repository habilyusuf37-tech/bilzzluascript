-- Load Rayfield
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

-- Services
local ReplicatedStorage = game:GetService("ReplicatedStorage")

-- RemoteEvents
local dealerEvent = ReplicatedStorage:WaitForChild("OpenDealershipEvent") -- ganti sesuai nama RemoteEvent
local boxEvent = ReplicatedStorage:WaitForChild("ClaimBoxEvent") -- ganti sesuai nama RemoteEvent

-- Window
local Window = Rayfield:CreateWindow({
    Name = "Premium Menu",
    LoadingTitle = "Premium Hub",
    LoadingSubtitle = "by Bill",
    Theme = "Dark",
    ConfigurationSaving = {Enabled = true, FolderName = "PremiumHubConfig", FileName = "Config1"}
})

-- Tab Dealer & Box
local PremiumTab = Window:CreateTab("Premium", 4483362458)
local PremiumSection = PremiumTab:CreateSection("Dealer & Box")

-- Auto Open Dealer
PremiumTab:CreateButton({
    Name = "Open Premium Dealer",
    Callback = function()
        dealerEvent:FireServer("Premium") -- langsung buka dealer
        Rayfield:Notify({
            Title = "Dealer Opened",
            Content = "Premium Dealer successfully opened!",
            Duration = 3
        })
    end,
})

-- Auto Claim Box
PremiumTab:CreateButton({
    Name = "Claim Box",
    Callback = function()
        boxEvent:FireServer("Box1") -- langsung claim box
        Rayfield:Notify({
            Title = "Box Claimed",
            Content = "Box successfully claimed!",
            Duration = 3
        })
    end,
})
