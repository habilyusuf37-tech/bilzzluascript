--===== LOAD RAYFIELD =====--
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

--===== KEY SYSTEM =====--
local validKey = "premiumhub" -- key yang harus dimasukkan
local Window = Rayfield:CreateWindow({
    Name = "Premium Hub",
    LoadingTitle = "Bill Hub",
    LoadingSubtitle = "by Bill",
    Theme = "Dark",
    KeySystem = true,
    KeySettings = {
        Title = "Enter Key",
        Subtitle = "Masukkan key untuk akses UI",
        Note = "Get your key from Discord: https://discord.gg/zXJCmGrCM",
        SaveKey = true,
        Key = validKey
    },
    ConfigurationSaving = {
        Enabled = true,
        FolderName = "PremiumHubConfigs",
        FileName = "Config1"
    }
})

--===== VARIABLES =====--
local running = false
local flySpeed = 250
local delayTime = 45
local earnings = 0

--===== CREATE TABS =====--
local AutoFarmTab = Window:CreateTab("AutoFarm", 4483362458)
local DealerTab = Window:CreateTab("Dealers", 4483362458)
local SettingsTab = Window:CreateTab("Settings", 4483362458)

--===== AUTOFARM SECTION =====--
AutoFarmTab:CreateSection("AutoFarm Controls")

AutoFarmTab:CreateToggle({
    Name = "Enable AutoFarm",
    CurrentValue = false,
    Flag = "AutoFarmToggle",
    Callback = function(value)
        running = value
        if running then
            Rayfield:Notify({Title="AutoFarm", Content="AutoFarm Started", Duration=3})
            -- Di sini kamu bisa panggil fungsi AutoFarm yang lama
        else
            Rayfield:Notify({Title="AutoFarm", Content="AutoFarm Stopped", Duration=3})
        end
    end
})

--===== SETTINGS SECTION =====--
SettingsTab:CreateSection("Settings")

SettingsTab:CreateSlider({
    Name = "AutoFarm Speed",
    Range = {50,500},
    Increment = 10,
    Suffix = "stud/s",
    CurrentValue = flySpeed,
    Callback = function(value)
        flySpeed = value
        print("Speed set to", flySpeed)
    end
})

SettingsTab:CreateSlider({
    Name = "Delay Timer",
    Range = {5,120},
    Increment = 1,
    Suffix = "s",
    CurrentValue = delayTime,
    Callback = function(value)
        delayTime = value
        print("Delay Timer set to", delayTime)
    end
})

--===== DEALER SECTION =====--
DealerTab:CreateSection("Dealer Teleport")

local dealerCoords = {
    ["Premium"] = Vector3.new(351.16, 8.19, -286.64),
    ["SLM"] = Vector3.new(940.53, 6.29, -474.83),
    ["Tokoma"] = Vector3.new(2470.92, 5.11, -550.10),
    ["BMR"] = Vector3.new(3083.91, 5.55, -546.16)
}

for name, coord in pairs(dealerCoords) do
    DealerTab:CreateButton({
        Name = "Teleport to "..name,
        Callback = function()
            local lp = game.Players.LocalPlayer
            if lp.Character and lp.Character:FindFirstChild("HumanoidRootPart") then
                lp.Character.HumanoidRootPart.CFrame = CFrame.new(coord + Vector3.new(0,5,0))
                Rayfield:Notify({
                    Title = "Dealer Teleport",
                    Content = "Teleported to "..name,
                    Duration = 3
                })
            end
        end
    })
end

--===== WELCOME NOTIFICATION =====--
Rayfield:Notify({
    Title = "Premium Hub Ready",
    Content = "Menu UI Loaded Successfully",
    Duration = 5
})
