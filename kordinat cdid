-- CDID Waypoint Saver 2025 - Tekan F untuk simpan koordinat
-- Hasil langsung muncul di console (F9) siap copy-paste ke script autofarm

local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")
local LocalPlayer = Players.LocalPlayer

local waypoints = {}

print("Waypoint Saver CDID READY")
print("Cara pakai:")
print("1. Berdiri tepat di posisi yang mau dijadikan waypoint")
print("2. Tekan tombol F â†’ koordinat langsung tersimpan")
print("3. Setelah semua waypoint selesai, buka console (F9) dan copy semua yang muncul")

UserInputService.InputBegan:Connect(function(input, gameProcessed)
    if gameProcessed then return end
    
    if input.KeyCode == Enum.KeyCode.F then
        local character = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()
        local root = character:WaitForChild("HumanoidRootPart")
        
        local pos = root.Position
        local roundedX = math.round(pos.X * 100) / 100
        local roundedY = math.round(pos.Y * 100) / 100
        local roundedZ = math.round(pos.Z * 100) / 100
        
        local coord = string.format("Vector3.new(%.2f, %.2f, %.2f),", roundedX, roundedY, roundedZ)
        
        table.insert(waypoints, coord)
        
        print(coord) -- langsung muncul di console
        
        -- Juga kasih notif di layar
        game.StarterGui:SetCore("SendNotification", {
            Title = "Waypoint Tersimpan!",
            Text = coord,
            Duration = 3
        })
    end
end)

-- Kalau mau langsung copy semua waypoint sekaligus, tekan G
UserInputService.InputBegan:Connect(function(input, gameProcessed)
    if gameProcessed then return end
    
    if input.KeyCode == Enum.KeyCode.G then
        if #waypoints == 0 then
            print("Belum ada waypoint yang disimpan!")
            return
        end
        
        local full = "{\n    " .. table.concat(waypoints, "\n    ") .. "\n}"
        print("=== SEMUA WAYPOINT (SIAP COPY) ===")
        print(full)
        print("=================================")
        
        -- Auto copy ke clipboard (executor mendukung setclipboard)
        if setclipboard then
            setclipboard(full)
            print("Sudah otomatis di-copy ke clipboard!")
        end
        
        game.StarterGui:SetCore("SendNotification", {
            Title = "SELESAI!",
            Text = "Semua waypoint sudah di-copy ke clipboard",
            Duration = 5
        })
    end
end)

print("Tekan F = simpan 1 waypoint | Tekan G = copy semua waypoint sekaligus")
