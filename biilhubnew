-- üî∞ Bill Hub - Auto Farm Kurir LEVEL PRO
-- üîπ UI Simpel + Bulatan B + Save Position + Progress + Notif + Auto Repeat

-- üõ°Ô∏è Anti AFK
spawn(function()
    while task.wait(60) do
        game:GetService("VirtualUser"):CaptureController()
        game:GetService("VirtualUser"):ClickButton2(Vector2.new())
    end
end)

local plr = game.Players.LocalPlayer
local hum = plr.Character:WaitForChild("HumanoidRootPart")

-- üí† Waypoints
local Waypoints = {
    Vector3.new(10, 2, 50),   -- 1: Ambil Job
    Vector3.new(80, 2, -20),  -- 2
    Vector3.new(120, 2, -50), -- 3
    Vector3.new(160, 2, -30), -- 4
    Vector3.new(200, 2, 10),  -- 5
    Vector3.new(230, 2, 40)   -- 6
}

local delayTime = 18
getgenv().AutoFarmKurir = false

-- üåÄ Teleport dan Tekan F
function TeleportTo(pos)
    hum.CFrame = CFrame.new(pos)
end

function PressF()
    game:GetService("VirtualInputManager"):SendKeyEvent(true, "F", false, game)
end

-- üü¢ AutoFarm Kurir (Pelaksanaan semua fitur)
spawn(function()
    while task.wait(1) do
        if getgenv().AutoFarmKurir then
            
            -- üîπ Ambil Job hanya sekali di awal (Waypoint 1)
            TeleportTo(Waypoints[1])
            wait(2)
            PressF()
            wait(delayTime)

            -- üîÅ Mulai Loop Waypoint 2‚Äì6 (Auto repeat tanpa kembali ke 1)
            while getgenv().AutoFarmKurir do
                for i = 2, #Waypoints do
                    if not getgenv().AutoFarmKurir then break end

                    -- Progress Status
                    ProgressLabel.Text = "Mengantar ke Tujuan: " .. (i-1) .. "/" .. (#Waypoints-1)

                    TeleportTo(Waypoints[i])
                    wait(2)
                    PressF()
                    wait(delayTime)
                end

                -- Notifikasi Job selesai
                ProgressLabel.Text = "Job Selesai! Mengulang..."
                wait(3)
            end
        end
    end
end)

----------------------------------------------------------------
-- üéØ UI LEVEL PRO (SIMPLES, SAVE POSISI, BULATAN B)
----------------------------------------------------------------

-- Load save posisi UI (jika ada)
local uis = game:GetService("UserInputService")
local screenGui = Instance.new("ScreenGui", plr.PlayerGui)

local savedPos = plr:FindFirstChild("UIPositionValue")
if not savedPos then
    savedPos = Instance.new("Vector3Value")
    savedPos.Name = "UIPositionValue"
    savedPos.Parent = plr
    savedPos.Value = Vector3.new(0.3, 0.25, 0)
end

-- Bulatan B pembuka UI
local circle = Instance.new("TextButton", screenGui)
circle.Size = UDim2.new(0,50,0,50)
circle.Position = UDim2.new(0.02,0,0.75,0)
circle.Text = "B"
circle.BackgroundColor3 = Color3.fromRGB(150,0,0)
circle.TextColor3 = Color3.fromRGB(255,255,255)
circle.Font = Enum.Font.GothamBold
circle.TextScaled = true

local main = Instance.new("Frame", screenGui)
main.Size = UDim2.new(0,520,0,280)
main.Position = UDim2.new(savedPos.Value.X, 0, savedPos.Value.Y, 0)
main.BackgroundColor3 = Color3.fromRGB(30,30,30)
main.Visible = false
main.Active = true
main.Draggable = true

-- Save posisi UI saat dipindah
main:GetPropertyChangedSignal("Position"):Connect(function()
    savedPos.Value = Vector3.new(main.Position.X.Scale, main.Position.Y.Scale, 0)
end)

circle.MouseButton1Click:Connect(function()
    main.Visible = not main.Visible
end)

-- Title
local title = Instance.new("TextLabel", main)
title.Size = UDim2.new(1,0,0,50)
title.Text = "Bill Hub - Auto Farm Kurir"
title.BackgroundColor3 = Color3.fromRGB(40,40,40)
title.Font = Enum.Font.GothamBold
title.TextScaled = true
title.TextColor3 = Color3.fromRGB(255,255,255)

-- üîª Tombol utama Auto Farm Kurir
local btn = Instance.new("TextButton", main)
btn.Size = UDim2.new(0.85,0,0,80)
btn.Position = UDim2.new(0.075,0,0.35,0)
btn.BackgroundColor3 = Color3.fromRGB(150,0,0)
btn.Font = Enum.Font.GothamBold
btn.TextColor3 = Color3.fromRGB(255,255,255)
btn.TextScaled = true
btn.Text = "Auto Farm Kurir: OFF"

btn.MouseButton1Click:Connect(function()
    getgenv().AutoFarmKurir = not getgenv().AutoFarmKurir
    btn.Text = "Auto Farm Kurir: " .. (getgenv().AutoFarmKurir and "ON" or "OFF")
    btn.BackgroundColor3 = getgenv().AutoFarmKurir and Color3.fromRGB(0,120,0) or Color3.fromRGB(150,0,0)
end)

-- üîπ Progress Status Label
ProgressLabel = Instance.new("TextLabel", main)
ProgressLabel.Size = UDim2.new(1,0,0,40)
ProgressLabel.Position = UDim2.new(0,0,0.75,0)
ProgressLabel.BackgroundColor3 = Color3.fromRGB(40,40,40)
ProgressLabel.Text = "Status: Idle"
ProgressLabel.Font = Enum.Font.Gotham
ProgressLabel.TextScaled = true
ProgressLabel.TextColor3 = Color3.fromRGB(200,200,200)
