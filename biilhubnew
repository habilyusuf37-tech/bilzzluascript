-- // GUI Bulatan B untuk buka/tutup menu
local ScreenGui = Instance.new("ScreenGui", game.CoreGui)
local ToggleMenuBtn = Instance.new("TextButton", ScreenGui)
ToggleMenuBtn.Size = UDim2.new(0, 50, 0, 50)
ToggleMenuBtn.Position = UDim2.new(0.05, 0, 0.2, 0)
ToggleMenuBtn.Text = "B"
ToggleMenuBtn.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
ToggleMenuBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
ToggleMenuBtn.TextScaled = true
ToggleMenuBtn.Font = Enum.Font.GothamBold
ToggleMenuBtn.AutoButtonColor = true

-- // Menu Utama Auto Farm
local MainFrame = Instance.new("Frame", ScreenGui)
MainFrame.Size = UDim2.new(0, 260, 0, 160)
MainFrame.Position = UDim2.new(0.05, 0, 0.32, 0)
MainFrame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
MainFrame.Visible = false

-- // Title
local Title = Instance.new("TextLabel", MainFrame)
Title.Size = UDim2.new(1, 0, 0, 35)
Title.Text = "BILL AUTO FARM"
Title.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.TextScaled = true
Title.Font = Enum.Font.GothamBold

-- // Toggle Auto Farm Button
local ToggleFarmBtn = Instance.new("TextButton", MainFrame)
ToggleFarmBtn.Size = UDim2.new(0, 200, 0, 60)
ToggleFarmBtn.Position = UDim2.new(0.1, 0, 0.45, 0)
ToggleFarmBtn.Text = "OFF"
ToggleFarmBtn.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
ToggleFarmBtn.TextScaled = true
ToggleFarmBtn.Font = Enum.Font.GothamBold

local autoFarm = false

ToggleMenuBtn.MouseButton1Click:Connect(function()
    MainFrame.Visible = not MainFrame.Visible
end)

ToggleFarmBtn.MouseButton1Click:Connect(function()
    autoFarm = not autoFarm
    if autoFarm then
        ToggleFarmBtn.Text = "ON"
        ToggleFarmBtn.BackgroundColor3 = Color3.fromRGB(0, 255, 0)
    else
        ToggleFarmBtn.Text = "OFF"
        ToggleFarmBtn.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
    end
end)

-- // Waypoints Teleport
local waypoints = {
    Vector3.new(-5111, 5, -3760),
    Vector3.new(-6795, 3, -444),
    Vector3.new(-17053, 104, 6567),
    Vector3.new(-6741, 3, 2975),
    Vector3.new(-8777, 3, 644),
    Vector3.new(-8382, 2, -3822)
}

local player = game.Players.LocalPlayer
local VirtualInputManager = game:GetService("VirtualInputManager")

-- // Teleport function
local function teleportTo(position)
    if player and player.Character then
        player.Character:MoveTo(position)
    end
end

-- // Auto Equip Tool (ambil tool pertama)
local function autoEquipItem()
    local backpack = player:WaitForChild("Backpack")
    for _, item in pairs(backpack:GetChildren()) do
        if item:IsA("Tool") then
            player.Character.Humanoid:EquipTool(item)
            break
        end
    end
end

-- // Auto Tekan F
local function autoPressF()
    VirtualInputManager:SendKeyEvent(true, Enum.KeyCode.F, false, game)
    wait(0.3)
    VirtualInputManager:SendKeyEvent(false, Enum.KeyCode.F, false, game)
end

-- // ðŸ”¥ ANTI AFK
task.spawn(function()
    local vu = game:GetService("VirtualUser")
    game.Players.LocalPlayer.Idled:Connect(function()
        vu:CaptureController()
        vu:ClickButton2(Vector2.new(0, 0))
        print("Anti AFK berjalan...")
    end)
end)

-- // AUTO FARM MAIN LOOP
task.spawn(function()
    while true do
        if autoFarm then
            for _, coord in ipairs(waypoints) do
                teleportTo(coord)
                task.wait(1)
                autoEquipItem()
                autoPressF()

                -- Delay 18 detik
                for i = 18, 1, -1 do
                    print("Next teleport in: "..i.."s")
                    task.wait(1)
                end
            end
        end
        task.wait(1)
    end
end)
