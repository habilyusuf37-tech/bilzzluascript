local ScreenGui = Instance.new("ScreenGui")
local OpenButton = Instance.new("TextButton")

ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")
OpenButton.Parent = ScreenGui
OpenButton.BackgroundColor3 = Color3.fromRGB(0, 120, 255)
OpenButton.Text = "B"
OpenButton.Size = UDim2.new(0, 50, 0, 50)
OpenButton.Position = UDim2.new(0.05, 0, 0.4, 0)
OpenButton.TextScaled = true
OpenButton.Font = Enum.Font.GothamBold
OpenButton.TextColor3 = Color3.fromRGB(255,255,255)
OpenButton.Visible = true
OpenButton.Active = true
OpenButton.Draggable = true

-- Main UI
local MainUI = Instance.new("Frame")
MainUI.Parent = ScreenGui
MainUI.BackgroundColor3 = Color3.fromRGB(25,25,25)
MainUI.Size = UDim2.new(0, 430, 0, 300)
MainUI.Position = UDim2.new(0.5, -215, 0.5, -150)
MainUI.Visible = false

local Title = Instance.new("TextLabel", MainUI)
Title.Text = "Bill Hub"
