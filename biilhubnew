-- LocalScript di StarterPlayerScripts

local player = game.Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- Buat ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "BillHubUI"
screenGui.ResetOnSpawn = false
screenGui.Parent = playerGui

-- Tombol Bulat B (Launcher)
local toggleButton = Instance.new("TextButton")
toggleButton.Size = UDim2.new(0, 70, 0, 70)
toggleButton.Position = UDim2.new(0, 30, 0.5, -35)
toggleButton.AnchorPoint = Vector2.new(0, 0.5)
toggleButton.Text = "B"
toggleButton.BackgroundColor3 = Color3.fromRGB(255, 255, 255) -- Putih supaya jelas
toggleButton.TextColor3 = Color3.fromRGB(0, 0, 0) -- Hitam (kontras)
toggleButton.Font = Enum.Font.GothamBold
toggleButton.TextSize = 32
toggleButton.BorderSizePixel = 0
toggleButton.AutoButtonColor = true
toggleButton.Draggable = true
toggleButton.Active = true
toggleButton.ZIndex = 10 -- Supaya selalu di atas UI lain
toggleButton.Parent = screenGui

-- Menu Utama
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 350, 0, 260)
mainFrame.Position = UDim2.new(0.5, -175, 0.5, -130)
mainFrame.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
mainFrame.Visible = false
mainFrame.BorderSizePixel = 0
mainFrame.Parent = screenGui

-- Header Premium BillHub
local header = Instance.new("TextLabel")
header.Size = UDim2.new(1, 0, 0, 40)
header.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
header.Text = "Premium  |  BillHub"
header.TextColor3 = Color3.fromRGB(220, 220, 220)
header.Font = Enum.Font.GothamBold
header.TextSize = 22
header.Parent = mainFrame

-- Tombol Auto Farm Kurir
local farmButton = Instance.new("TextButton")
farmButton.Size = UDim2.new(0, 280, 0, 50)
farmButton.Position = UDim2.new(0.5, -140, 0, 70)
farmButton.Text = "Auto Farm Kurir : OFF"
farmButton.BackgroundColor3 = Color3.fromRGB(150, 30, 30)
farmButton.TextColor3 = Color3.new(1,1,1)
farmButton.Font = Enum.Font.GothamBold
farmButton.TextSize = 18
farmButton.Parent = mainFrame

-- Delay Display
local delayLabel = Instance.new("TextLabel")
delayLabel.Size = UDim2.new(0, 280, 0, 40)
delayLabel.Position = UDim2.new(0.5, -140, 0, 130)
delayLabel.Text = "Delay: 18 Detik"
delayLabel.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
delayLabel.TextColor3 = Color3.new(1,1,1)
delayLabel.Font = Enum.Font.Gotham
delayLabel.TextSize = 16
delayLabel.Parent = mainFrame

-- Notifikasi Sampng Layar
local notification = Instance.new("TextLabel")
notification.Size = UDim2.new(0, 250, 0, 30)
notification.Position = UDim2.new(1, -260, 0.8, 0)
notification.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
notification.TextColor3 = Color3.new(1,1,1)
notification.Font = Enum.Font.Gotham
notification.TextSize = 16
notification.Visible = false
notification.Parent = screenGui

-- Fungsi Toggle Menu
toggleButton.MouseButton1Click:Connect(function()
    mainFrame.Visible = not mainFrame.Visible
end)

-- Fungsi Kecil untuk Notifikasi
local function showNotification(text)
    notification.Text = text
    notification.Visible = true
    wait(2)
    notification.Visible = false
end

-- Saat Tombol Farm diklik (Masih UI Saja)
farmButton.MouseButton1Click:Connect(function()
    local isActive = farmButton.Text:find("OFF")
    if isActive then
        farmButton.Text = "Auto Farm Kurir : ON"
        farmButton.BackgroundColor3 = Color3.fromRGB(30, 150, 30)
        showNotification("Auto Farm Kurir Aktif!")
    else
        farmButton.Text = "Auto Farm Kurir : OFF"
        farmButton.BackgroundColor3 = Color3.fromRGB(150, 30, 30)
        showNotification("Auto Farm Kurir Dimatikan.")
    end
end)
