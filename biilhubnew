--====================================================--
--  SYSTEM MENU + TOGGLE BUTTON + AUTO FARM OFFICE + AUTO EARN MONEY
--  Untuk Game Buatan Kamu Sendiri
--====================================================--

local Players = game:GetService("Players")
local player = Players.LocalPlayer
local PlayerGui = player:WaitForChild("PlayerGui")

local screenGui = Instance.new("ScreenGui", PlayerGui)
screenGui.Name = "MyGameHub"


---

-- 1. TOMBOL BULAT UNTUK BUKA / TUTUP MENU

local toggle = Instance.new("ImageButton", screenGui)
toggle.Size = UDim2.new(0, 70, 0, 70)
toggle.Position = UDim2.new(0.05, 0, 0.5, 0)
toggle.BackgroundTransparency = 1
toggle.Image = "rbxassetid://3926305904"
toggle.ImageRectOffset = Vector2.new(4, 4)
toggle.ImageRectSize = Vector2.new(36, 36)


---

-- 2. FRAME MENU

local menu = Instance.new("Frame", screenGui)
menu.Size = UDim2.new(0, 400, 0, 350)
menu.Position = UDim2.new(0.3, 0, 0.25, 0)
menu.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
menu.Visible = false

local UIStroke = Instance.new("UIStroke", menu)
UIStroke.Color = Color3.fromRGB(255, 255, 255)
UIStroke.Thickness = 2

local UICorner = Instance.new("UICorner", menu)
UICorner.CornerRadius = UDim.new(0, 12)

toggle.MouseButton1Click:Connect(function()
menu.Visible = not menu.Visible
end)


---

-- 3. JUDUL MENU

local title = Instance.new("TextLabel", menu)
title.Size = UDim2.new(1, 0, 0, 40)
title.Text = "My Game Hub"
title.TextColor3 = Color3.new(1, 1, 1)
title.BackgroundTransparency = 1
title.Font = Enum.Font.GothamBold
title.TextSize = 28


---

-- 4. TOMBOL AUTO FARM OFFICE

local autoFarmButton = Instance.new("TextButton", menu)
autoFarmButton.Size = UDim2.new(0.8, 0, 0, 50)
autoFarmButton.Position = UDim2.new(0.1, 0, 0.2, 0)
autoFarmButton.BackgroundColor3 = Color3.fromRGB(170, 40, 40)
autoFarmButton.Text = "Auto Farm Office: OFF"
autoFarmButton.TextColor3 = Color3.new(1,1,1)
autoFarmButton.Font = Enum.Font.Gotham
autoFarmButton.TextSize = 22

local UICorner2 = Instance.new("UICorner", autoFarmButton)
local autoFarmEnabled = false

autoFarmButton.MouseButton1Click:Connect(function()
autoFarmEnabled = not autoFarmEnabled

if autoFarmEnabled then  
	autoFarmButton.Text = "Auto Farm Office: ON"  
	autoFarmButton.BackgroundColor3 = Color3.fromRGB(40, 170, 40)  
else  
	autoFarmButton.Text = "Auto Farm Office: OFF"  
	autoFarmButton.BackgroundColor3 = Color3.fromRGB(170, 40, 40)  
end

end)


---

-- 5. TOMBOL AUTO EARN MONEY (FITUR BARU)

local autoMoneyButton = Instance.new("TextButton", menu)
autoMoneyButton.Size = UDim2.new(0.8, 0, 0, 50)
autoMoneyButton.Position = UDim2.new(0.1, 0, 0.4, 0)
autoMoneyButton.BackgroundColor3 = Color3.fromRGB(40, 40, 170)
autoMoneyButton.Text = "Auto Earn Money: OFF"
autoMoneyButton.TextColor3 = Color3.new(1,1,1)
autoMoneyButton.Font = Enum.Font.Gotham
autoMoneyButton.TextSize = 22

local UICorner3 = Instance.new("UICorner", autoMoneyButton)
local autoMoneyEnabled = false

autoMoneyButton.MouseButton1Click:Connect(function()
autoMoneyEnabled = not autoMoneyEnabled

if autoMoneyEnabled then  
	autoMoneyButton.Text = "Auto Earn Money: ON"  
	autoMoneyButton.BackgroundColor3 = Color3.fromRGB(40, 170, 40)  
else  
	autoMoneyButton.Text = "Auto Earn Money: OFF"  
	autoMoneyButton.BackgroundColor3 = Color3.fromRGB(40, 40, 170)  
end

end)


---

-- 6. SISTEM AUTO FARM OFFICE

task.spawn(function()
local player = game.Players.LocalPlayer
local char = player.Character or player.CharacterAdded:Wait()
local root = char:WaitForChild("HumanoidRootPart")
local waitTime = 1

while true do  
	task.wait(waitTime)  

	if autoFarmEnabled then  
		local buttons = {}  

		for _, obj in pairs(game:GetDescendants()) do  
			if obj:IsA("TextButton") then  
				table.insert(buttons, obj)  
			end  

			if obj:IsA("Part") or obj:IsA("MeshPart") then  
				if string.find(obj.Name:lower(), "answer")   
				or string.find(obj.Name:lower(), "jawaban") then  
					table.insert(buttons, obj)  
				end  
			end  
		end  

		if #buttons > 0 then  
			local chosen = buttons[math.random(1, #buttons)]  

			if chosen:IsA("TextButton") then  
				pcall(function()  
					chosen:Activate()  
					chosen.MouseButton1Click:Fire()  
				end)  
			else  
				pcall(function()  
					root.CFrame = chosen.CFrame + Vector3.new(0, 2, 0)  
				end)  
			end  
		end  
	end  
end

end)


---

-- 7. SISTEM AUTO EARN MONEY

task.spawn(function()
while true do
task.wait(2) -- interval memberi uang

if autoMoneyEnabled then  
		  
		-- âš  GANTI NAMA REMOTEEVENT SESUAI GAME KAMU  
		-- Contoh:  
		-- game.ReplicatedStorage.GiveMoney:FireServer(50)  

		pcall(function()  
			local remote = game.ReplicatedStorage:FindFirstChild("RemoteEvent")  
			if remote then  
				remote:FireServer(75.00) -- jumlah uang yang diberikan  
			end  
		end)  
	end  
end

end)
