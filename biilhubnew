Title.BackgroundColor3 = Color3.fromRGB(40,40,40)

local CloseButton = Instance.new("TextButton", MainUI)
CloseButton.Text = "X"
CloseButton.Size = UDim2.new(0,35,0,35)
CloseButton.Position = UDim2.new(1,-40,0,5)
