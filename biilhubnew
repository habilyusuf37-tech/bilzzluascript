-- Logic Visual Auto Farm Kurir
local AutoFarmEnabled = false
AutoFarmButton.MouseButton1Click:Connect(function()
    AutoFarmEnabled = not AutoFarmEnabled
    if AutoFarmEnabled then
        AutoFarmButton.Text = "Auto Farm Kurir: ON"
        AutoFarmButton.BackgroundColor3 = Color3.fromRGB(0,150,0)

        -- Visual Simulasi Alur
        warn("START: Ambil Job di Waypoint 1 (Sekali)")
        task.wait(2)

        warn("GO FARM: Loop Waypoint 2â€“6 (Auto F aktif)")
        task.wait(2)

        warn("FARMING LOOP BERJALAN... (Delay 18 Detik)")
    else
        AutoFarmButton.Text = "Auto Farm Kurir: OFF"
        AutoFarmButton.BackgroundColor3 = Color3.fromRGB(150,0,0)
        
        warn("Auto Farm Kurir DIMATIKAN")
    end
end)

-- Open / Close UI
OpenButton.MouseButton1Click:Connect(function()
    MainUI.Visible = not MainUI.Visible
end)
CloseButton.MouseButton1Click:Connect(function()
    MainUI.Visible = false
end)
